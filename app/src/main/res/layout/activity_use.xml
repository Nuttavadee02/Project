<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UseActivity">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="11dp" />

            <ImageView
                android:id="@+id/pic"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="8dp"
                android:scaleType="center"
                android:textAlignment="center"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/manual1" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="9dp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:text="1. พยากรณ์ผลผลิตข้าวโพด"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                app:layout_constraintEnd_toEndOf="@+id/imageView14"
                app:layout_constraintStart_toStartOf="@+id/imageView14"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="370dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:text="คือการนำข้อมูลจำนวนมากมาใช้ในการพยากรณ์ โดยการพยากรณ์จะใช้ปัจจัยต่าง ๆ มาคำนวณเพื่อให้ได้การคาดการณ์ของผลผลิต"
                android:textAlignment="textStart"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/imageView14"
                app:layout_constraintStart_toStartOf="@+id/imageView14"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:text="2. วิธีการปลูกข้าวโพด"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                app:layout_constraintEnd_toEndOf="@+id/imageView14"
                app:layout_constraintStart_toStartOf="@+id/imageView14"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="370dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:text="คือการนำข้อมูลต่าง ๆ มาให้ความรู้เช่น การเตรียมดิน การปลูกข้าวโพด การรดน้ำและการเก็บเกี่ยว เพื่อให้ผู้ใช้สามารถนำความรู้ไปต่อยอดได้"
                android:textAlignment="textStart"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/imageView14"
                app:layout_constraintStart_toStartOf="@+id/imageView14"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:text="3. ราคารับซื้อข้าวโพด"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                app:layout_constraintEnd_toEndOf="@+id/imageView14"
                app:layout_constraintStart_toStartOf="@+id/imageView14"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="370dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:text="คือการนำราคารับซื้อข้าวโพดมาแสดงเพื่อให้ผู้ใช้สามารถรู้ราคาที่ผู้รับซื้อต้องการรับซื้อได้"
                android:textAlignment="textStart"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/imageView14"
                app:layout_constraintStart_toStartOf="@+id/imageView14"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:text="4. ออก"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                app:layout_constraintEnd_toEndOf="@+id/imageView14"
                app:layout_constraintStart_toStartOf="@+id/imageView14"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:text="ปุ่ม ออก ใช้เพื่อออกจากแอปพลิเคชัน"
                android:textAlignment="textStart"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/imageView14"
                app:layout_constraintStart_toStartOf="@+id/imageView14"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>