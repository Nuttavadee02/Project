<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/farmer"
        android:layout_width="114dp"
        android:layout_height="86dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="120dp"
        android:contentDescription="TODO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/farmer" />

    <Button
        android:id="@+id/fc"
        android:layout_width="250dp"
        android:layout_height="86dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bthome"
        android:fontFamily="@font/mitr_medium"
        android:text="พยากรณ์ผลผลิตข้าวโพด"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/farmer"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/howto"
        android:layout_width="114dp"
        android:layout_height="86dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/farmer"
        app:srcCompat="@drawable/howto" />

    <Button
        android:id="@+id/ht"
        android:layout_width="250dp"
        android:layout_height="86dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bthome"
        android:fontFamily="@font/mitr_medium"
        android:text="วิธีการปลูกข้าวโพด"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/howto"
        app:layout_constraintTop_toBottomOf="@+id/fc" />

    <ImageView
        android:id="@+id/pice"
        android:layout_width="114dp"
        android:layout_height="86dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/howto"
        app:srcCompat="@drawable/price" />

    <Button
        android:id="@+id/pi"
        android:layout_width="250dp"
        android:layout_height="86dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bthome"
        android:fontFamily="@font/mitr_medium"
        android:text="ราคารับซื้อข้าวโพด"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pice"
        app:layout_constraintTop_toBottomOf="@+id/ht" />

    <ImageView
        android:id="@+id/exit"
        android:layout_width="114dp"
        android:layout_height="86dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pice"
        app:srcCompat="@drawable/exit" />

    <Button
        android:id="@+id/ex"
        android:layout_width="250dp"
        android:layout_height="86dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bgbte"
        android:fontFamily="@font/mitr_medium"
        android:text="ออก"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/exit"
        app:layout_constraintTop_toBottomOf="@+id/pi" />

</androidx.constraintlayout.widget.ConstraintLayout>