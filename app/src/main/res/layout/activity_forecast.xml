<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForecastActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="ขนาดพื้นที่"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="200dp"
                android:layout_height="39dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="ชนิดดินที่ใช้ในการปลูก"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="200dp"
                android:layout_height="39dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="ระยะเวลาการปลูก"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="200dp"
                android:layout_height="39dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="ปริมาณเมล็ดพันธุ์"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/spinner4"
                android:layout_width="200dp"
                android:layout_height="39dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="ปุ๋ยคอก"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/spinner5"
                android:layout_width="200dp"
                android:layout_height="39dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="ปุ๋ยเคมี"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/spinner6"
                android:layout_width="200dp"
                android:layout_height="39dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="ศัตรูพืช"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/spinner7"
                android:layout_width="200dp"
                android:layout_height="39dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="กำจัดศัตรูพืช"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/spinner8"
                android:layout_width="200dp"
                android:layout_height="39dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="24sp" />

            <Button
                android:id="@+id/forecast"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_gravity="center"
                android:background="@drawable/bgbtfc"
                android:fontFamily="@font/mitr_medium"
                android:text="พยากรณ์ผลผลิต"
                android:textSize="20sp" />

            <Button
                android:id="@+id/clear"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_gravity="center"
                android:background="@drawable/bgbtfc"
                android:fontFamily="@font/mitr_medium"
                android:text="ล้างข้อมูล"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>